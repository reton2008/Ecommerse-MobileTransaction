
@{
    ViewData["Title"] = "Mobile Service & Cash Account";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br>
<div class="border backgroundWhite">
    <div class="row">
        <div class="col-6">
            <h2 class="text-primary">Service Cash Wallet List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-action="Upsert" class="btn btn-primary"><i class="fas fa-plus"></i> &nbsp; Create New Service Cash Wallet</a>
        </div>
    </div>

    <br />
    <br />

    <table id="tblData" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>Name</th>
                <th>Mobile Service Account</th>
                <th>Cash Account</th>
                <th>Active</th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts{
    <script src="~/js/walletAccount.js"></script>
}