@model Models.MobileFinance.viewModels.ServiceCashWalletVM;
@{
    var title = "Service Cash Wallet";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post" asp-action="Upsert">
    <div class="row px-2 mx-2 backgroundWhite border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @if (Model.ServiceCashWallet.Id != 0)
        {
            <input type="hidden" asp-for="ServiceCashWallet.Id" />
            title = "Edit Service";
        }

        <div class="col-12">
            <h2 class="text-primary">@title</h2>
            <br />
        </div>
        <div class="col-8">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="ServiceCashWallet.WalletId"></label>
                </div>
                <div class="col-8">
                    @Html.DropDownListFor(m => m.ServiceCashWallet.WalletId, Model.ServiceWalletList, "- Please Select Frequency -", new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="ServiceCashWallet.CashId"></label>
                </div>
                <div class="col-8">
                    @Html.DropDownListFor(m => m.ServiceCashWallet.CashId, Model.CashWalletList, "- Please Select Category -", new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="ServiceCashWallet.Active"></label>
                </div>
                <div class="col-8">
                    <input asp-for="ServiceCashWallet.Active" class="form-control" />
                    <span asp-validation-for="ServiceCashWallet.Active" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-8 offset-4">
                    @if (Model.ServiceCashWallet.Id != 0)
                    {
                        //Edit buton and bak to list
                        <partial name="_EditAndBackToListButton" model="Model.ServiceCashWallet.Id" />
                    }
                    else
                    {
                        //Create button and back to list
                        <partial name="_CreateAndBackToListButton" />
                    }
                </div>
            </div>
        </div>
    </div>
</form>
